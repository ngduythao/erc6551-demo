{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
